@model List<VentaModel>

<h1>Resultados</h1>

<div class="text-right mb-3">
    <a class="btn btn-primary mr-2" href="/Venta/ResultadosOrdenadosAscendente">Ordenar Ascendente</a>
    <a class="btn btn-primary" href="/Venta/ResultadosOrdenadosDescendente">Ordenar Descendente</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#IdVenta</th>
                <th>Cliente</th>
                <th>Cantidad Vendida</th>
                <th>Precio Unitario</th>
                <th>Total Venta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venta in Model)
            {
                <tr>
                    <td>@venta.IdVenta</td>
                    <td>@venta.Cliente</td>
                    <td>@venta.CantidadVendida</td>
                    <td>$@venta.PrecioUnitario</td>
                    <td>$@(venta.CantidadVendida * venta.PrecioUnitario)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a class="btn btn-secondary" href="/Presentacion/Bienvenido">Volver al Inicio</a>
</div>